<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Voetbal\Planning\Poule" table="planningpoules" repository-class="Voetbal\Planning\Poule\Repository">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="number" column="number" type="smallint" nullable="false" unique="false"/>
    <field name="roundNr" column="roundNr" type="smallint" nullable="false" unique="false"/>
    <one-to-many field="places" target-entity="Voetbal\Planning\Game\Place" mapped-by="poule">
      <cascade>
        <cascade-persist/>
        <cascade-remove/>
      </cascade>
    </one-to-many>
    <one-to-many field="games" target-entity="Voetbal\Planning\Game" mapped-by="poule">
      <cascade>
        <cascade-persist/>
        <cascade-remove/>
      </cascade>
    </one-to-many>
  </entity>
</doctrine-mapping>