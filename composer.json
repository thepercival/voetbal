{
  "name": "thepercival/voetbal",
  "description": "library  for football competitions and more",
  "keywords": ["voetbal","football"],
  "homepage": "https://github.com/thepercival/voetbal",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Coen Dunnink",
      "email": "coendunnink@gmail.com"
    }
  ],
  "support": {
	"email": "coendunnink@gmail.com"
  },
  "require": {
    "php": ">=7.3",
    "vlucas/phpdotenv": "^4.1",
    "league/period": "^4.9",
    "doctrine/orm": "^2.7",
    "jms/serializer": "^3.4",
    "monolog/monolog": "^2.0",
    "guzzlehttp/guzzle": "^6.5",
    "slim/slim": "^4.3",
    "slim/psr7": "^0.6.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.2",
    "phpstan/phpstan": "^0.12",
    "phpstan/phpstan-doctrine": "^0.12",
    "phpstan/extension-installer": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Voetbal\\": "domain/",
      "VoetbalApp\\": "app/",
      "Voetbal\\SerializationHandler\\": "serialization/handler",
      "Voetbal\\SerializationSubscriberEvent\\": "serialization/subscriberevent"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Voetbal\\Tests\\": "tests/cases"
    },
    "psr-0": {
      "": "tests/"
    }
  },
  "scripts": {
    "start": "php -S localhost:2990 -t public/",
    "test": [
      "vendor/bin/phpunit --bootstrap vendor/autoload.php tests/cases/"
    ],
    "stan": "vendor/bin/phpstan analyse --level=5 domain tests/cases/"
  },
  "extra": {
    "phpstan": {
      "includes": [
        "extension.neon"
      ]
    }
  }
}
